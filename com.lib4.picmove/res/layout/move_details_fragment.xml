<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pane_background_color" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@color/white_tile_background_color"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@color/white_tile_background_color"
                android:padding="5dp"
                android:visibility="gone"
                android:weightSum="1.0" >

                <TextView
                    style="@style/list_item"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight=".7"
                    android:text="Big Items " >
                </TextView>

                <TextView
                    android:id="@+id/bigItemsCount"
                    style="@style/list_item"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight=".2"
                    android:text="10 " >
                </TextView>
            </LinearLayout>

            <HorizontalScrollView
                android:id="@+id/bigItemsScrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:id="@+id/bigItemsImageLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_tile_background_color"
            android:orientation="horizontal"
            android:padding="5dp"
            android:weightSum="1.0" >

            <TextView
                android:id="@+id/smallboxCountLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight=".7"
                android:text="Small box" >
            </TextView>

            <TextView
                android:id="@+id/smallBoxCount"
                style="@style/list_item"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight=".2"
                android:text="10" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@color/white_tile_background_color"
            android:padding="5dp"
            android:weightSum="1.0" >

            <TextView
                android:id="@+id/mediumboxCountLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight=".7"
                android:text="Medium box" >
            </TextView>

            <TextView
                android:id="@+id/mediumBoxCount"
                style="@style/list_item"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight=".2"
                android:text="10" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@color/white_tile_background_color"
            android:padding="5dp"
            android:weightSum="1.0" >

            <TextView
                android:id="@+id/largeboxCountLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight=".7"
                android:text="Large box Count " >
            </TextView>

            <TextView
                android:id="@+id/largeBoxCount"
                style="@style/list_item"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight=".2"
                android:text="10 " >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@color/white_tile_background_color"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@color/white_tile_background_color"
                android:padding="5dp"
                android:weightSum="1.0" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight=".7"
                    android:text="Item Requires Diassembly " >
                </TextView>

                <TextView
                    android:id="@+id/itemsRequiresDiassemblyCount"
                    style="@style/list_item"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight=".2"
                    android:text="10 " >
                </TextView>
            </LinearLayout>

            <HorizontalScrollView
                android:id="@+id/bigItemsScrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" >

                <LinearLayout
                    android:id="@+id/itemsRequiresDiassemblyImageLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@color/white_tile_background_color"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white_tile_background_color"
                android:padding="5dp"
                android:weightSum="1.0" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight=".7"
                    android:text="Item Wont Fit In Elevator" >
                </TextView>

                <TextView
                    android:id="@+id/itemsWontfitInelevatorCount"
                    style="@style/list_item"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight=".2"
                    android:text="10 " >
                </TextView>
            </LinearLayout>

            <HorizontalScrollView
                android:id="@+id/bigItemsScrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone" >

                <LinearLayout
                    android:id="@+id/itemsWontFitInBoxImageLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/white_tile_background_color"
            android:orientation="vertical"
            android:padding="5dp"
            android:weightSum="1.0" >

            <TextView
                android:id="@+id/moveFromLabel"
                style="@style/blue_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight=".7"
                android:text="Move From" >
            </TextView>

            <TextView
                android:id="@+id/moveFrom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight=".7"
                android:text="India karnataka bangalore celebrity signature 560100"
                android:textStyle="normal" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@color/white_tile_background_color"
            android:orientation="vertical"
            android:padding="5dp"
            android:weightSum="1.0" >

            <TextView
                android:id="@+id/moveToLabel"
                style="@style/blue_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight=".7"
                android:text="Move To" >
            </TextView>

            <TextView
                android:id="@+id/moveTo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight=".7"
                android:text="India Kerala bangalore celebrity signature 560100"
                android:textStyle="normal" >
            </TextView>
        </LinearLayout>
    </LinearLayout>

</ScrollView>