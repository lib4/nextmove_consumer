<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pane_background_color"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/pane_background_color"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_tile_background_color"
            android:orientation="horizontal"
            android:padding="5dp" >

            <TextView
                android:id="@+id/smallboxCount "
                style="@style/text_view_grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Small box Count " >
            </TextView>

            <EditText
                android:id="@+id/numberPicker1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:padding="5dp"
            android:background="@color/white_tile_background_color" >

            <TextView
                android:id="@+id/smallboxCount "
                style="@style/text_view_grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Medium box Count " >
            </TextView>

            <EditText
                android:id="@+id/numberPicker1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
             android:padding="5dp"
            android:background="@color/white_tile_background_color" >

            <TextView
                android:id="@+id/smallboxCount "
                style="@style/text_view_grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Large box Count " >
            </TextView>

            <EditText
                android:id="@+id/numberPicker1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
             android:padding="5dp"
            android:background="@color/white_tile_background_color"
            android:weightSum="1.0" >

            <TextView
                android:id="@+id/smallboxCount "
                style="@style/text_view_grey"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight=".8"
                android:text="Big Items Wont Fit In a box " >
            </TextView>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight=".2"
                android:src="@drawable/arrow" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
             android:padding="5dp"
            android:background="@color/white_tile_background_color"
            android:weightSum="1.0" >

            <TextView
                android:id="@+id/Requires Disassembly"
                style="@style/text_view_grey"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight=".8"
                android:text="Requires Disassembly" >
            </TextView>

            <ImageView
                android:layout_width="0dp"
                
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight=".2"
                android:src="@drawable/arrow" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
             android:padding="5dp"
            android:background="@color/white_tile_background_color"
            android:weightSum="1.0" >

            <TextView
                android:id="@+id/FitInElevator"
                style="@style/text_view_grey"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight=".8"
                android:text="Fit In Elevator" >
            </TextView>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight=".2"
                android:src="@drawable/arrow" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:padding="5dp"
            android:layout_marginTop="2dp"
            android:background="@color/white_tile_background_color"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/smallboxCount "
                style="@style/text_view_grey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Move From" >
            </TextView>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
             android:padding="5dp"
            android:background="@color/white_tile_background_color"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/smallboxCount "
                style="@style/text_view_grey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Move To" >
            </TextView>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical" />
        </LinearLayout>
        
        
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
             android:padding="5dp"
            android:background="@color/white_tile_background_color"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/smallboxCount "
                style="@style/text_view_grey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Comments/Specific Requirements (Optional)" >
            </TextView>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <Button
            android:id="@+id/getquote_btn"
            style="@style/btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/btn_selecton"
            android:gravity="center"
            android:text="Get Quotes Instantly" >
        </Button>
    </LinearLayout>

</ScrollView>