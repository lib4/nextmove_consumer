<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tiles"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/pane_background_color"
    android:padding="5dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:background="@color/white_tile_background_color"
        android:padding="2dp">

        <ImageView
            android:id="@+id/itempic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="@drawable/default_profile_pic"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
             />

        <TextView
            android:id="@+id/details"
            style="@style/blue_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/itempic"
            android:text="Small Box : 20 \nMedium Box\nBig Box : 20\n Items wont fit in box : 20\nRequires Disassembly\nFit In Elevator : 05"
            android:textSize="15sp" >
        </TextView>
           

        <TextView
            android:id="@+id/address"
            style="@style/text_view_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/details"
            android:layout_weight="1.0"
            android:text="Move From \n Californai Georgia edededededede\n Move To \n India bangalore " >
        </TextView>

        <ImageView
            android:id="@+id/action_items"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/lin"
            android:layout_margin="2dp"
            android:background="@drawable/ic_vdots"/>
    </RelativeLayout>

</FrameLayout>